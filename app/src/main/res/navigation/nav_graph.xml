<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.example.forecast.feature_forecast.presentation.fragments.MainPageFragment"
        android:label="MainPageFragment"
        tools:layout="@layout/main_page_fragment">
        <action
            android:id="@+id/action_mainPageFragment_to_citiesFragment"
            app:destination="@id/citiesFragment" />
    </fragment>
    <dialog
        android:id="@+id/citiesFragment"
        android:name="com.example.forecast.feature_forecast.presentation.fragments.CitiesFragment"
        android:label="CitiesFragment"
        tools:layout="@layout/choose_city_fragment">
        <action
            android:id="@+id/action_citiesFragment_to_mainPageFragment"
            app:destination="@id/mainPageFragment" />
    </dialog>
</navigation>