<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cities_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:itemHorizontalPadding="52dp"
    app:itemTextAppearance="@style/Navigation.TextAppearance"
    app:shapeAppearance="@style/ShapeAppearanceOverlay.Nav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/cities_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cities_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>