<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:baselineAligned="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_city"
        style="@style/Widget.Forecast.TextView.Default.CitiesFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/city_default_view"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/city_temperature"
        style="@style/Widget.Forecast.TextView.Default.CitiesFragment.Titles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:gravity="end"
        android:text="@string/default_temperature" />

</LinearLayout>