<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_view_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="72dp"

        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:contentDescription="@string/underscore_image"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_underscore"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_city"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="@string/city_example"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/city_temperature"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"
                android:fontFamily="@font/roboto"
                android:gravity="right|center_vertical"
                android:text="10Â°"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/item_done_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:contentDescription="@string/done_image"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_done_24px"
                tools:ignore="VectorDrawableCompat" />

<!--            <ImageView-->
<!--                android:id="@+id/dots_menu"-->
<!--                android:layout_width="fill_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="5"-->
<!--                app:srcCompat="@drawable/dots_menu"-->
<!--                tools:ignore="VectorDrawableCompat" />-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>