<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:paddingLeft="55dp"
    android:paddingRight="@dimen/big_margin"
    android:paddingStart="55dp"
    android:paddingEnd="@dimen/big_margin">

    <ImageView
        android:id="@+id/item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"
        android:contentDescription="@string/location_description"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_baseline_my_location_24_black"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/item_city"
        style="@style/TextView.MainBlack"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/city_default_view" />

    <TextView
        android:id="@+id/city_temperature"
        style="@style/TextView.MainBlack.Titles"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        tools:text="10" />

</LinearLayout>