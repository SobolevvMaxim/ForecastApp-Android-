<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Forecast" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Forecast.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.Forecast.TextView.Default" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Forecast.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Widget.Forecast.TextView.OfflineMode" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/offline_mode</item>
        <item name="android:gravity">center</item>
    </style>

</resources>